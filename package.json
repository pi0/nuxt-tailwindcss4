{
  "name": "nuxt-tailwindcss4",
  "version": "0.1.0",
  "description": "Nuxt + tailwindcss 4 (alpha)",
  "repository": "pi0/nuxt-tailwindcss4",
  "license": "MIT",
  "type": "module",
  "configKey": "tailwindcss4",
  "compatibility": {
    "nuxt": ">=3.0.0-rc.1"
  },
  "packageManager": "pnpm@9.12.0",
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "nuxi dev test/fixture",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepack": "nuxt-module-build build",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "test": "vitest run"
  },
  "dependencies": {
    "@nuxt/kit": "latest",
    "@tailwindcss/postcss": "next",
    "@tailwindcss/vite": "next",
    "pathe": "^1.1.2",
    "tailwindcss": "next"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/eslint-config": "^0.7.3",
    "@nuxt/module-builder": "^0.8.4",
    "@nuxt/schema": "latest",
    "@nuxt/test-utils": "latest",
    "@nuxt/webpack-builder": "^3.14.1592",
    "@types/node": "^20.11.24",
    "automd": "^0.3.12",
    "changelogen": "^0.5.7",
    "eslint": "^8.57.0",
    "nuxt": "latest",
    "prettier": "^3.4.2",
    "typescript": "5.6.2",
    "vitest": "^2.1.8"
  }
}
